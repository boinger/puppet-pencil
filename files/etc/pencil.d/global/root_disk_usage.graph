# -*- mode: ruby -*-
title 'root disk usage'
area :stacked

field :root_used,
        :alias => "used",
        :color => 'blue',
        :as_percent => 1,
        :data  => "divideSeries(stats.gauges.diskspace.root.byte_used,sumSeries(stats.gauges.diskspace.root.byte_used,stats.gauges.diskspace.root.byte_free))"

field :root_free,
        :alias => "free",
        :color => 'yellow',
        :as_percent => 1,
        :data  => "divideSeries(stats.gauges.diskspace.root.byte_free,sumSeries(stats.gauges.diskspace.root.byte_used,stats.gauges.diskspace.root.byte_free))"
