---
## !!! This file managed by puppet !!!
:graphite_url: <%= graphite_url %>
:port: <%= pencil_port %>
:host_sort: "sensible"
:metric_format: "%m.%c.%h" #%m metric, %c cluster, %h host
:templates_dir: "<%= pencil_conf_dir %>"
:refresh_rate: 60 # refresh rate for images in seconds

# careful! these are properties as specified by the graphite-dsl now
:default_url_opts:
  :width: 1000
  :height: 400
  :fontsize: 13
  :template: "noc"
  :ymin: 0
  :margin: 5
  :thickness: 2

:webapp: true
:default_views:
  - default:
      -1h: "past hour"
  - -8h: "past 8 hours"
  - -24h: "past day"
  - -1w: "past week"
  - -2w: "past fortnight"
